<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- 控件样式 -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.App.CardView</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- 文本输入框样式 -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
    
    <!-- 卡片样式 -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- 自定义Chip样式 -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/primary_dark</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Chip</item>
    </style>

    <!-- Chip文本样式 -->
    <style name="TextAppearance.App.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
