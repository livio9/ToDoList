<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/theme1_primary" />
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp" />
        </shape>
    </item>
    <item android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme1_primary" />
        </shape>
    </item>
    <item android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/theme1_primary"
                android:endColor="@color/theme1_primary"
                android:angle="270" />
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="8dp" />
        </shape>
    </item>
</layer-list> 