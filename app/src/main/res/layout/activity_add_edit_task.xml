<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="6dp">
        
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="编辑任务"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:navigationIconTint="?attr/colorOnPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">
            
            <!-- 任务标题输入框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/titleLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="任务标题"
                app:startIconDrawable="@android:drawable/ic_menu_edit"
                app:startIconTint="?attr/colorPrimary"
                style="@style/Widget.App.TextInputLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="2"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <!-- 日期时间选择 - 优化为现代Material风格 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dateTimeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardBackgroundColor="@color/surface"
                app:layout_constraintTop_toBottomOf="@id/titleLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="?attr/colorPrimary"/>
                    
                    <TextView
                        android:id="@+id/textDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="选择日期和时间"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- 地点输入框 - 添加地图集成提示 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/placeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="地点（点击选择位置）"
                app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                app:startIconTint="?attr/colorPrimary"
                app:endIconMode="custom"
                app:endIconDrawable="@android:drawable/ic_dialog_map"
                app:endIconTint="?attr/colorPrimary"
                app:endIconContentDescription="打开地图选择"
                style="@style/Widget.App.TextInputLayout"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/dateTimeCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <!-- 类别选择 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/categoryLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="类别"
                style="@style/Widget.App.TextInputLayout"
                app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                app:startIconTint="?attr/colorPrimary"
                app:endIconMode="dropdown_menu"
                app:endIconTint="?attr/colorPrimary"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/placeLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spinnerCategoryInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true" 
                    android:inputType="none"
                    android:textColor="@color/text_primary"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <!-- 添加优先级选择 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/priorityLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="优先级"
                style="@style/Widget.App.TextInputLayout"
                app:startIconDrawable="@android:drawable/star_big_on"
                app:startIconTint="?attr/colorPrimary"
                app:endIconMode="dropdown_menu"
                app:endIconTint="?attr/colorPrimary"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/categoryLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spinnerPriorityInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:inputType="none"
                    android:textColor="@color/text_primary"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <!-- 番茄时钟设置 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pomodoroCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardBackgroundColor="@color/surface"
                app:layout_constraintTop_toBottomOf="@id/priorityLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            app:tint="?attr/colorPrimary"/>
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="番茄时钟专注模式"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="16dp"/>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchPomodoro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="?attr/colorPrimary"
                            app:trackTint="?attr/colorPrimaryLight"
                            android:checked="false"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开启后，可在任务执行时使用25分钟专注+5分钟休息的时间管理模式"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="40dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- 完成状态切换 -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/checkCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标记为已完成"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                app:thumbTint="?attr/colorPrimary"
                app:trackTint="?attr/colorPrimaryLight"
                app:layout_constraintTop_toBottomOf="@id/pomodoroCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <!-- AI分解任务按钮 - 优化样式 -->
            <Button
                android:id="@+id/buttonAiDecompose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI分解任务"
                android:layout_marginTop="24dp"
                android:drawableStart="@android:drawable/ic_menu_help"
                android:padding="12dp"
                app:backgroundTint="?attr/colorPrimary"
                app:icon="@android:drawable/ic_menu_help"
                app:iconTint="?attr/colorOnPrimary"
                app:iconPadding="8dp"
                app:layout_constraintTop_toBottomOf="@id/checkCompleted" />

            <!-- 按钮容器，横向排列 -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/buttonAiDecompose">

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="保存"
                    android:layout_marginEnd="8dp"
                    android:paddingVertical="12dp"
                    app:backgroundTint="?attr/colorPrimary" />

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="删除任务"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="?attr/colorPrimary"
                    app:strokeColor="?attr/colorPrimary"
                    android:paddingVertical="12dp" />
            </LinearLayout>
                
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
