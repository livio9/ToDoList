<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="代办集详情"
            app:titleTextColor="@color/white"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:scrollbars="none"
        android:fadeScrollbars="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 代办集信息 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textGroupName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="代办集名称"/>

                    <TextView
                        android:id="@+id/textCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"
                        android:text="类别: 工作"/>

                    <TextView
                        android:id="@+id/textEstimatedDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="3dp"
                        android:text="预计完成天数: 7"/>

                    <TextView
                        android:id="@+id/textCreatedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="3dp"
                        android:text="创建时间: 2023-05-01 10:00"/>
                    
                    <!-- 按钮容器 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">
                        
                        <!-- 保存按钮 -->
                        <Button
                            android:id="@+id/buttonSaveTaskGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="保存修改"
                            android:textSize="12sp"
                            android:layout_marginEnd="6dp"
                            app:icon="@android:drawable/ic_menu_save"
                            app:iconSize="16dp"
                            app:iconGravity="textStart"
                            android:backgroundTint="?attr/colorPrimary"
                            style="@style/Widget.MaterialComponents.Button"/>
                        
                        <!-- 删除按钮 -->
                        <Button
                            android:id="@+id/buttonDeleteTaskGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="删除代办集"
                            android:textSize="12sp"
                            android:layout_marginStart="6dp"
                            app:icon="@android:drawable/ic_menu_delete"
                            app:iconSize="16dp"
                            app:iconGravity="textStart"
                            android:textColor="?attr/colorError"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="?attr/colorError"/>
                    </LinearLayout>
                    <!-- 共享按钮 -->
                    <Button
                        android:id="@+id/buttonShareTaskGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="共享代办集"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/accent"
                        android:textColor="@android:color/white"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 子任务标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="子任务列表"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginBottom="6dp"/>

            <!-- 无任务提示 -->
            <TextView
                android:id="@+id/textNoTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无子任务"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

            <!-- 子任务列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSubTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 添加任务按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add"
        app:fabSize="normal"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        android:contentDescription="添加子任务"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout> 