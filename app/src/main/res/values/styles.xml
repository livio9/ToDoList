    <!-- 按钮样式 -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/theme1_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">2dp</item>
    </style>
    
    <!-- 文本输入框样式 -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/theme1_primary</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="hintTextColor">@color/theme1_primary</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>
    
    <!-- 卡片样式 -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- 自定义Chip样式 -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="chipBackgroundColor">?attr/colorPrimary</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Chip</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="rippleColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <!-- 小型Chip样式 用于过滤栏 -->
