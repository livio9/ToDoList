<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任务统计"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- 完成率卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="任务完成情况"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>
                
                <TextView
                    android:id="@+id/textCompletionRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="完成率: 0%"
                    android:textSize="16sp"/>
                
                <TextView
                    android:id="@+id/textTasksCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已完成: 0 / 0"
                    android:textSize="16sp"/>
                
                <ProgressBar
                    android:id="@+id/progressCompletion"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- 分类统计卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="分类统计"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <!-- 工作类别 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    
                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@color/category_work"
                        android:layout_gravity="center_vertical"/>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="工作"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                    
                    <TextView
                        android:id="@+id/textWorkCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                
                <!-- 个人类别 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    
                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@color/category_personal"
                        android:layout_gravity="center_vertical"/>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="个人"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                    
                    <TextView
                        android:id="@+id/textPersonalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                
                <!-- 其他类别 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@color/category_other"
                        android:layout_gravity="center_vertical"/>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="其他"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                    
                    <TextView
                        android:id="@+id/textOtherCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- 近期趋势卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="近期趋势"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>
                
                <TextView
                    android:id="@+id/textTrendDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无趋势数据"
                    android:textSize="16sp"/>
                
                <!-- 这里可以添加图表视图 -->
                <FrameLayout
                    android:id="@+id/chartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView> 